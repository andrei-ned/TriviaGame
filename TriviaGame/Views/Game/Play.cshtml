@{
    ViewData["Title"] = "Home";
}

<div class="row gameContainer">
    <div class="col-3 h-100 overflow-auto" id="scoreboard"></div>
    <div class="col-6 text-center h-100 text-break" id="gameboard">
        <div class="progress">
            <div class="progress-bar active" role="progressbar" style="width: 100%; transition: width 100s linear " aria-valuemin="0" aria-valuemax="100"></div>
            <small class="centerAbsolute questionCounter"></small>
        </div>
        <div class="playing" style="display: none;">
            <div id="question">Question?</div>
            <button id="answer0" class="col btn btn-outline-primary" onclick="submitAnswer(0)">A</button>
            <div class="answerCaption ac0"></div>
            <button id="answer1" class="col btn btn-outline-primary" onclick="submitAnswer(1)">B</button>
            <div class="answerCaption ac1"></div>
            <button id="answer2" class="col btn btn-outline-primary" onclick="submitAnswer(2)">C</button>
            <div class="answerCaption ac2"></div>
            <button id="answer3" class="col btn btn-outline-primary" onclick="submitAnswer(3)">D</button>
            <div class="answerCaption ac3"></div>
            <div id="scoreUpdates"></div>
        </div>
        <div class="end" style="display: none;"></div>
    </div>
    <div class="col-3 h-100" id="chatbox">
        <div class="overflow-auto" id="chatboxMessages"></div>
        <input class="" type="text" id="chatboxInput" placeholder="Send a chat message" />
    </div>
</div>


@section Scripts {
    <script>
        var username = '@Model';
    </script>
    <script src="~/js/game.js" asp-append-version="true"></script>
}